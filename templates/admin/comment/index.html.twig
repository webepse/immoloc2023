{% extends 'admin/base.html.twig' %}

{% block title %}Administration des commentaires{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-3">Administration des commentaires</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Auteur</th>
                    <th>Commentaire</th>
                    <th>Note</th>
                    <th>Annonce</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for comment in pagination.data %}
                    <tr>
                        <td>{{comment.id}}</td>
                        <td>{{comment.createdAt | date('d/m/Y')}}</td>
                        <td><img src="{{comment.author.picture}}" class="avatar avatar-micro" alt=" "> {{comment.author.fullName}}</td>
                        <td>{{comment.content}}</td>
                        <td><span class="badge bg-dark">{{comment.rating}}</span></td>
                        <td>{{comment.ad.title}}</td>
                        <td>
                            <a href="{{path('admin_comments_edit', {'id': comment.id})}}" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                            <a href="{{path('admin_comments_delete', {'id': comment.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{pagination.display()}}
    </div>
{% endblock %}
